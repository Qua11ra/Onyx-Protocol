{
  "extends": "../typescript-config/base.json",
  
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}